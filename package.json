{
  "name": "gherkin-step-navigator",
  "displayName": "Gherkin Step Navigator",
  "description": "Navigate from Gherkin feature steps to code.",
  "icon": "icon.png",
  "version": "1.0.0",
  "publisher": "Danny Briskin",
  "engines": {
    "vscode": "^1.97.0"
  },
  "main": "./out/main.js",
  "activationEvents": [
    "onLanguage:gherkin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danny-briskin/gherkin-step-navigator.git"
  },
  "contributes": {
    "languages": [
      {
        "id": "gherkin",
        "extensions": [
          ".feature"
        ],
        "aliases": [
          "Gherkin"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gherkin",
        "scopeName": "source.gherkin",
        "path": "./syntaxes/feature.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Gherkin Step Navigator Settings",
      "properties": {
        "gherkinStepNavigator.stepFilePattern": {
          "type": "array",
          "default": [
            "**/*Steps.cs"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run bundle",
    "bundle": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --minify"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.1",
    "@types/vscode": "^1.97.0",
    "esbuild": "^0.27.3",
    "glob": "^13.0.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "glob": "^10.0.0",
    "mocha": "^11.7.5"
  }
}